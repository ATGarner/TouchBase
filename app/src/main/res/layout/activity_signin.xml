<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.andrewgarner.amessage.SigninActivity"
    android:background="#125688">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_square_background"
            android:paddingTop="0dp"
            android:paddingBottom="20dp"

            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TouchBase"
                android:id="@+id/textView3"
                android:textStyle="bold|italic"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:textSize="50sp" />


            <Space
                android:layout_width="20dp"
                android:layout_height="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/arrow"
                android:id="@+id/arrow"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="5dp" />

            <org.andrewgarner.amessage.CircleButton
                android:id="@+id/button1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/login2"
                app:cb_color="#125688"
                android:onClick="signin"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:visibility="invisible"
                android:indeterminate="true"
                android:indeterminateOnly="true" />

            <TextView android:text="Logging in.." android:layout_width="wrap_content"
                android:id="@+id/textView"
                android:layout_height="wrap_content" android:visibility="gone"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
